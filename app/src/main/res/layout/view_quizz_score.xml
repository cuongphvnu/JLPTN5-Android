<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <!-- Red square -->
        <View
            android:id="@+id/quizz_detail_wrong_square"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignRight="@+id/quizz_detail_wrong_value"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:background="@color/colorPrimaryRed" />

        <!-- Red square value -->
        <TextView
            android:id="@+id/quizz_detail_wrong_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="0"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/quizz_item_title_size" />

        <!-- Green square -->
        <View
            android:id="@+id/quizz_detail_right_square"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignRight="@+id/quizz_detail_right_value"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:background="@color/colorWhite" />

        <!-- Green square value -->
        <TextView
            android:id="@+id/quizz_detail_right_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/quizz_detail_wrong_square"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:textColor="@color/colorWhite"
            android:text="0"
            android:textSize="@dimen/quizz_item_title_size" />

    </RelativeLayout>

