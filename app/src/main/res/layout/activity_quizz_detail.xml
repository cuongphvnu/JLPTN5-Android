<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aymenworks.jlptn5.quizDetail.QuizDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/quizz_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimaryGreen"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/quizz_detail_toolbar"
        android:orientation="vertical">

        <!-- Question -->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_margin="16dp"
            android:backgroundTint="@color/colorWhite"
            app:cardElevation="5dp">

            <TextView xmlns:tools="http://schemas.android.com/tools"
                    android:id="@+id/question"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-60dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="120sp" />

        </android.support.v7.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- 1 -->
                <android.support.v7.widget.CardView
                    android:id="@+id/card_answer_1"
                    android:tag="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/colorWhite"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/quizz_item_height"
                        android:background="?android:attr/selectableItemBackground"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/quizz_item_icon_size"
                            android:layout_height="@dimen/quizz_item_icon_size"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/quizz_item_icon_left_margin"
                            android:layout_marginRight="@dimen/quizz_item_icon_right_margin"
                            android:contentDescription="@string/quizz_icon_answer_content_description"
                            android:background="@drawable/corner_radius_grey" />

                        <TextView
                            android:id="@+id/answer_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/quizz_item_title_size" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!-- 2 -->
                <android.support.v7.widget.CardView
                    android:id="@+id/card_answer_2"
                    android:tag="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/colorWhite"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/quizz_item_height"
                        android:background="?android:attr/selectableItemBackground"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/quizz_item_icon_size"
                            android:layout_height="@dimen/quizz_item_icon_size"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/quizz_item_icon_left_margin"
                            android:layout_marginRight="@dimen/quizz_item_icon_right_margin"
                            android:contentDescription="@string/quizz_icon_answer_content_description"
                            android:background="@drawable/corner_radius_grey" />

                        <TextView
                            android:id="@+id/answer_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/quizz_item_title_size" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!-- 3 -->
                <android.support.v7.widget.CardView
                    android:id="@+id/card_answer_3"
                    android:tag="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/colorWhite"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/quizz_item_height"
                        android:background="?android:attr/selectableItemBackground"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/quizz_item_icon_size"
                            android:layout_height="@dimen/quizz_item_icon_size"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/quizz_item_icon_left_margin"
                            android:layout_marginRight="@dimen/quizz_item_icon_right_margin"
                            android:contentDescription="@string/quizz_icon_answer_content_description"
                            android:background="@drawable/corner_radius_grey" />

                        <TextView
                            android:id="@+id/answer_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/quizz_item_title_size" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <!-- 4 -->
                <android.support.v7.widget.CardView
                    android:id="@+id/card_answer_4"
                    android:tag="3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@color/colorWhite"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/quizz_item_height"
                        android:background="?android:attr/selectableItemBackground"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="@dimen/quizz_item_icon_size"
                            android:layout_height="@dimen/quizz_item_icon_size"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/quizz_item_icon_left_margin"
                            android:layout_marginRight="@dimen/quizz_item_icon_right_margin"
                            android:contentDescription="@string/quizz_icon_answer_content_description"
                            android:background="@drawable/corner_radius_grey" />

                        <TextView
                            android:id="@+id/answer_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/quizz_item_title_size" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>